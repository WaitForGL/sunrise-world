<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.september.sunrise.kk.mapper.KkMenuMapper">

	<!-- 基础字段映射 -->
	<resultMap id="BaseResultMap" type="com.september.sunrise.kk.domain.KkMenu">
		<id property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="path" column="path"/>
		<result property="component" column="component"/>
		<result property="perms" column="perms"/>
		<result property="parentId" column="parent_id"/>
		<result property="type" column="type"/>
		<result property="orderNum" column="order_num"/>
		<result property="visible" column="visible"/>
		<result property="status" column="status"/>
	</resultMap>

	<!-- 根据角色查询菜单 -->
	<select id="selectMenusByRole" resultMap="BaseResultMap" parameterType="string">
		SELECT m.*
		FROM kk_menu m
				 INNER JOIN kk_role_menu rm ON m.id = rm.menu_id
		WHERE rm.role_code = #{roleCode}
		  AND m.status = 1
		ORDER BY m.order_num
	</select>

	<!-- 查询所有菜单（可选） -->
	<select id="selectAllMenus" resultMap="BaseResultMap">
		SELECT *
		FROM kk_menu
		WHERE status = 1
		ORDER BY order_num
	</select>

	<!-- 根据父ID查询子菜单（可选） -->
	<select id="selectMenusByParentId" resultMap="BaseResultMap" parameterType="long">
		SELECT *
		FROM kk_menu
		WHERE parent_id = #{parentId}
		  AND status = 1
		ORDER BY order_num
	</select>

</mapper>
