<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.september.sunrise.kk.mapper.KkRoleMapper">

	<!-- 根据用户ID查询角色 -->
	<select id="findByUserId" resultType="com.september.sunrise.kk.domain.KkRole">
		SELECT r.*
		FROM kk_role r
				 INNER JOIN kk_user_role ur ON ur.role_id = r.id
		WHERE ur.user_id = #{userId}
	</select>

</mapper>
